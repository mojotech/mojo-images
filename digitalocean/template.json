{
  "variables": {
    "kernel_release": "wheezy",
    "kernel_version": "amd64"
  },
  "builders": [{
    "type": "digitalocean",
    "image_id": "3445812",
    "region_id": "4",
    "size_id": "66",
    "private_networking": true,
    "snapshot_name": "mojo-debian-{{timestamp}}",
    "ssh_timeout": "5m"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "digitalocean/files",
      "destination": "/tmp/files"
    },{
      "type": "file",
      "source": "shared/files/apt",
      "destination": "/tmp/files/apt"

    },{
      "type": "shell",
      "environment_vars": [
        "ADMIN_USER=admin",
        "DEBIAN_FRONTEND=noninteractive",
        "KERNEL_RELEASE={{user `kernel_release`}}",
        "KERNEL_VERSION={{user `kernel_version`}}"
      ],
      "scripts":[
        "digitalocean/scripts/setup.sh",
        "shared/scripts/setup_apt.sh",
        "shared/scripts/setup.sh",
        "digitalocean/scripts/setup_kexec.sh",
        "shared/scripts/setup_admin.sh",
        "shared/scripts/update_kernel.sh",
        "shared/scripts/update_init.sh",
        "digitalocean/scripts/cleanup.sh"
      ]
    }
  ]
}
