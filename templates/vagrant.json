{
  "variables": {
    "name": "",
    "kernel_version": "",
    "kernel_release": "",
    "iso_url": "",
    "iso_checksum": "",
    "iso_checksum_type": "sha1"
  },
  "builders": [{
    "vm_name": "mojo-debian",
    "type": "vmware-iso",
    "headless": true,
    "guest_os_type": "debian7-64",
    "http_directory": "config",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<esc><wait>",
      "install",
      " auto",
      " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
      " debian-installer=en_US",
      " locale=en_US",
      " keymap=us",
      " netcfg/get_hostname=vagrant",
      " netcfg/get_domain=vm ",
      "<enter>"
    ],
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },{
    "vm_name": "mojo-debian",
    "type": "virtualbox-iso",
    "headless": true,
    "http_directory": "config",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "guest_os_type": "Debian_64",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<esc><wait>",
      "install",
      " auto",
      " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
      " debian-installer=en_US",
      " locale=en_US",
      " keymap=us",
      " netcfg/get_hostname=vagrant",
      " netcfg/get_domain=vm ",
      "<enter>"
    ],
    "shutdown_command": "sudo shutdown -h now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "file",
    "source": "config",
    "destination": "/tmp/config"
  },{
    "type": "shell",
    "environment_vars": [
      "ADMIN_USER=vagrant",
      "DEBIAN_FRONTEND=noninteractive",
      "KERNEL_VERSION={{user `kernel_version`}}",
      "KERNEL_RELEASE={{user `kernel_release`}}"
    ],
    "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
    "scripts": [
      "scripts/setup.sh",
      "scripts/setup_apt.sh",
      "scripts/setup_admin.sh",
      "scripts/update.sh",
      "scripts/update_kernel.sh",
      "scripts/update_init.sh",
      "scripts/reboot.sh"
    ]
  },{
    "type": "shell",
    "pause_before": "20s",
    "environment_vars": [
      "ADMIN_USER=vagrant",
      "DEBIAN_FRONTEND=noninteractive"
    ],
    "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
    "scripts": [
      "scripts/install_tools.sh",
      "scripts/cleanup.sh",
      "scripts/cleanup_disk.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "{{user `name`}}-{{.Provider}}.box"
  }]
}
